<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #0b9dff34;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unam.ciencias.matematicas.proyectofinal.ui.controladorPrincipal">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label text="Conversor de Coordenadas">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <Label fx:id="mensajeError" textFill="#691210ff" visible="false">
      <font>
         <Font size="14.0" />
      </font>
   </Label>
   
   <!-- SECCIÓN DE ENTRADA -->
   <GridPane hgap="10.0" vgap="10.0">
      <columnConstraints>
         <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
         <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      
      <Label style="-fx-font-weight: bold;" text="Sistema de Origen:" GridPane.rowIndex="0" />
      <ComboBox fx:id="comboOrigen" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
      <!-- Componentes de entrada (Etiquetas se actualizarán con JS) -->
      <Label fx:id="etiquetaComp1" text="Comp 1:" GridPane.rowIndex="1" />
      <TextField fx:id="campoComp1" promptText=" " GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
      <Label fx:id="etiquetaComp2" text="Comp 2:" GridPane.rowIndex="2" />
      <TextField fx:id="campoComp2" promptText=" " GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
      <Label fx:id="etiquetaComp3" text="Comp 3:" GridPane.rowIndex="3" />
      <TextField fx:id="campoComp3" promptText=" " GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
      <Label style="-fx-font-weight: bold;" text="Sistema de Destino:" GridPane.rowIndex="4" />
      <ComboBox fx:id="comboDestino" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      
   </GridPane>
   
   <Button fx:id="botonConvertir" onAction="#manejarConversion" prefWidth="200.0" style="-fx-background-color: #079310ff; -fx-text-fill: white; -fx-font-weight: bold;" text="Convertir Coordenadas" />
   
   <!-- SECCIÓN DE RESULTADOS -->
   <VBox spacing="10.0">
      <Label text="Resultados" style="-fx-font-weight: bold; -fx-underline: false;">
         <font>
            <Font size="16.0" />
         </font>
      </Label> 
      <Label fx:id="resultadoFinal" text="Resultado: " wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </VBox>
</VBox>